    private boolean isLeapYear(int year){
        boolean p = false;
        
        if(year % 4 == 0){
            p = true;
            if(year % 100 == 0){
                p = false;
            }
            if(year % 400 == 0){
                p = true;
            }
        }
       // System.out.println("Year : " + year + " is isLeapYear : " + p);
        return p;
    }
    
    public int diffDays(Date other){
        int diff_y = Math.abs(this.year - other.year);
        int Total_days = 0;

        int y_start;
        if(this.year > other.year){y_start = other.year;}
        else{y_start = this.year;}
        
        for(int i = 0; i<diff_y;i++){
            if(isLeapYear(y_start + i)){
                Total_days += 366;
            }
            else{
                Total_days += 365;
            }
            
        }
       /* System.out.println("diff y : " + diff_y);
        System.out.println("Total_days : " + Total_days);
        
